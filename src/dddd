import React, { useState } from 'react'
import axios from 'axios'
const App = () => {
  const [question,setquestion]=useState("")
  const [answer,setanswer]=useState("")
async function genrateAnswer()
{
  setanswer("loading");
  const response=await axios({
    url:"https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash-latest:generateContent?key=AIzaSyBs1GLNuLlL1vyo7wk1SX_zErdwdpGwM50",
    method:'post',
    data:{"contents":[{"parts":[{"text":question}]}]}
  })
  setanswer(response['data']['candidates'][0]['content']['parts'][0]['text']);
}
  return (
   <>
   <h1>Chat Bot</h1>
   <textarea value={question} onChange={(e)=>{
    setquestion(e.target.value)
   }}></textarea>
   <button onClick={genrateAnswer}>Genrate</button>
   <br />
   <hr />
   <pre>{answer}</pre>
   <hr />
   </>
  )
}

export default App